{
  "name": "monochrome-tailwind-colors",
  "displayName": "Monochrome - Tailwind CSS",
  "description": "Monochromatic readable theme collection based on Tailwind CSS grays",
  "publisher": "ccssmnn",
  "version": "1.0.0",
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1a1a1a",
    "theme": "dark"
  },
  "author": {
    "name": "Carl Assmann",
    "email": "assmann@hey.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ccssmnn/monochrome.git"
  },
  "bugs": {
    "url": "https://github.com/ccssmnn/monochrome/issues"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "light",
    "dark",
    "monochrome",
    "minimal",
    "minimalist",
    "tailwindcss",
    "slate",
    "stone",
    "zinc",
    "neutral",
    "gray"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Monochrome Stone Dark",
        "uiTheme": "vs-dark",
        "path": "./theme/monochrome-dark-stone.json"
      },
      {
        "label": "Monochrome Stone Light",
        "uiTheme": "vs",
        "path": "./theme/monochrome-light-stone.json"
      },
      {
        "label": "Monochrome Neutral Dark",
        "uiTheme": "vs-dark",
        "path": "./theme/monochrome-dark-neutral.json"
      },
      {
        "label": "Monochrome Neutral Light",
        "uiTheme": "vs",
        "path": "./theme/monochrome-light-neutral.json"
      },
      {
        "label": "Monochrome Zinc Dark",
        "uiTheme": "vs-dark",
        "path": "./theme/monochrome-dark-zinc.json"
      },
      {
        "label": "Monochrome Zinc Light",
        "uiTheme": "vs",
        "path": "./theme/monochrome-light-zinc.json"
      },
      {
        "label": "Monochrome Gray Dark",
        "uiTheme": "vs-dark",
        "path": "./theme/monochrome-dark-gray.json"
      },
      {
        "label": "Monochrome Gray Light",
        "uiTheme": "vs",
        "path": "./theme/monochrome-light-gray.json"
      }
    ]
  },
  "devDependencies": {
    "chroma-js": "^2.1.0",
    "lodash.merge": "^4.6.2",
    "nodemon": "^2.0.9"
  },
  "scripts": {
    "start": "nodemon --watch src src/index.js",
    "build": "node src/index.js"
  }
}
